{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb",
    "plugin:prettier/recommended",
    "prettier",
    "react-app"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["react", "react-hooks", "prettier"],
  "rules": {
    "quotes": ["error", "single"],
    "no-console": "warn",
    "react/react-in-jsx-scope": 0,
    "react/jsx-filename-extension": 0
  }
}
